<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="egovframework.toy.post.service.impl.PostMapper">

	<resultMap id="post"
		type="egovframework.toy.post.service.PostVO">
		<result property="post_id" column="post_id" />
		<result property="title" column="title" />
		<result property="email" column="email" />
		<result property="created_at" column="created_at" />
		<result property="view_count" column="view_count" />
		<result property="content" column="content" />
	</resultMap>

	<select id="getPost" parameterType="String" resultType="postVO">
		SELECT * FROM free WHERE post_id = #{post_id}
	</select>

	<update id="incrementViewCount" parameterType="String">
		UPDATE free SET view_count = view_count + 1 WHERE post_id = #{post_id}
	</update>
	
	<select id="getComment" parameterType="String" resultType="commentVO">
		SELECT * FROM comments WHERE post_id = #{post_id}
	</select>
	
	<insert id="commentDo" parameterType="String">
		INSERT INTO comments (post_id, email, content) VALUES (#{post_id},#{email},#{comment});
	</insert>

</mapper>